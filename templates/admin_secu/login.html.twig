{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block myTitle %}Login{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security')}}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <div class="form-group ms-4" >
            <label>Login : </label>
            <input type="text" class="form-control" name="_username" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="form-group ms-4">
            <label>Password : </label>
            <input type="password" class="form-control"  name="_password" required>
        </div>
        <input type="submit" class="btn btn-primary ms-4 m-3" value="identification" >
    </form>  
{% endblock %}
