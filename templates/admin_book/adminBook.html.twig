{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block myTitle %}Page d'administration{% endblock %}

{% block body %}
    <a class="btn btn-primary ms-5" href="{{ path('admin_book_new') }}">Ajouter</a>
    <table class="table ms-5">
        <thead>
            <tr>
                <th>Image</th>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Cat√©gorie</th>
                <th>Editeur</th>
                <th>Date publication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
            <tr>
                <td style="ms-4"><img src="{{ asset('img/' ~ book.img) }}" alt="{{ book.title }}" width="80"></td>
                <td>{{ book.id }}</td>
                <td><strong>{{ book.title }}</strong></td>
                <td>{{ book.author }}</td>
                <td>{{ book.category }}</td>
                <td>{{ book.editor }}</td>
                <td>{{ book.dateOfPublication}}</td>            
                <td>
                <a class="btn btn-primary" href="{{ path('admin_book_modification', {id: book.id}) }}">Modifier</a>
                <a class="btn btn-danger" href="{{ path('admin_book_delete', {id: book.id}) }}" onclick="return confirm('Etes vous sur ?')">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}