                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Login</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        
        <h1 class="border border-primary p-4 m-4 text-white bg-primary text-center ">{% block myTitle %}{% endblock %}</h1>

        {% block body %}{% endblock %}
    
        {% block javascripts %}{% endblock %}
